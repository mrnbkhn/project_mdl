{{!
    @template qtype_vplquestion/fileseteditor

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-role
    * data-direction
    * data-manylang

    Context variables required for this template:
    * listname An HTML ID for the file list.

    Example context (json):
    {
        "listname": "execfileslist"
    }
}}
<span data-role="filesloadicon">{{> core/loading }}</span>
<em data-role="novplmessage" style="display:none">{{# str}} selectavpl, qtype_vplquestion, #id_qvplbaseheader {{/ str}}</em>
<span data-role="scrollerarrow" data-direction="left" class="scrollerarrow align-top align-items-center clickable" style="display:none">
    <i class="fa fa-fw fa-caret-left"></i>
</span>{{!
}}<ul id="{{listname}}" class="filelist inline-list"></ul>{{!
}}<span data-role="scrollerarrow" data-direction="right" class="scrollerarrow align-top align-items-center clickable" style="display:none">
    <i class="fa fa-fw fa-caret-right"></i>
</span>
<div class="ml-3 pl-1 mb-1" data-role="filemanagement" style="display:none">
    <label class="d-inline mr-3"><input type="radio" value="inherit" name="{{listname}}management" class="mr-1">{{# str}} inheritfromvpl, qtype_vplquestion {{/ str}}</label>
    <label class="d-inline mr-3"><input type="radio" value="overwrite" name="{{listname}}management" class="mr-1">{{# str}} overwriteexecfile, qtype_vplquestion {{/ str}}</label>
</div>
